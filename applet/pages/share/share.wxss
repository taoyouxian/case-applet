/* pages/share/share.wxss */


.sort-container{
  margin-top: 20rpx;
  width: 90%;
  display: flex;
  padding: 20rpx;
}
.sort-item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  color: #fff;
  padding: 15rpx 0;
  font-size: 32rpx;
}

.sort-hospital{
  background-color: #c95df1;
}
.sort-date{
  background-color: #09098e;
}


.list{
  width: 100%;
  background: #f2f2f2;
  padding: 20rpx 0;
}
.my-cell-title{
  font-size: 32rpx;
  color: #999;
}



.img-box{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-top: -20rpx;
  }
  .case-code{
    font-size: 42rpx;
    color: #999;
    margin-top: 10rpx;
  }

.img-box image{
  width: 586rpx;
  height: 586rpx;
  background-color: #f9f9f9
}



.circle-btn{
  display: flex;
  position: absolute;
  bottom: 80rpx;
  background-color: #1296db;
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.scan{
  width: 100rpx;
  height: 100rpx;
}
.scan-title{
  margin-top: 30rpx;
  color: #f0f0f0;
  font-size: 32rpx;
}
