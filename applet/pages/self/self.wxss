/* pages/self/self.wxss */
.setting{
  position: absolute;
  top: 30rpx;
  right: 20rpx;
}
.setting .setting-img{
  width: 48rpx;
  height: 48rpx;
}


.self-top{
  background-color: #99CC00;
  height: 400rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}
.self-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;

}
.self-top .self-name{
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #f0f0f0;
}

.self-top .self-avatar{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.self-middle{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.self-list{
  margin-top: 20rpx;
  padding: 20rpx 0;
  width: 100%;
  display: flex;
  background-color: #f0f0f0;
  justify-content: space-between;  
  
}
.list-left{
  display: flex;
  align-items: center;
}
.list-right{
  display: flex;
  align-items: center;
}
.list-icon{
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
}
.list-title{
  color:#999; 
}


